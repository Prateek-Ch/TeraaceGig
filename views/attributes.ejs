  <body>
    <h1>Add Attributes for a product</h1>
    <hr />
    <div class=" card-block">
      <form action="/upload/attrupload" method="POST">
        <div>
            <label for="pid">Product Id</label>
            <input class="form-control"
              type="text"
              id="pid"
              placeholder="product id"
              value=""
              name="pid"
              required
            />
          </div>
        
        <div>
          <label for="title">Product Colour</label>
          <input class="form-control" type="text" id="color" placeholder="color" value="" name="color" required/>
        </div>

        <div>
          <label for="title">Sizes</label>
          <input class="form-control" type="textarea" id="sizes" placeholder="sizes" value="" name="sizes" required/>
          </div>
          <div>
          <label for="countAvail">Count Available</label>
          <input class="form-control" type="textarea" id="count" placeholder="count" value="" name="count" required/>
          </div>
          <div>
        
        <div>
          <button type="submit" class = "btn btn-secondary" style="margin: 30px">Submit</button>
        </div>
      </form>
    </div>
