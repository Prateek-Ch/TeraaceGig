<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Terrace Gig</title>


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/productDetails.css">

</head>

<body>

  
  <nav class="navbar navbar-inverse navbar-fixed-top" >
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <a href="" class="navbar-brand"><img src="/imgs/logo.png" alt="" srcset="" class="navlogo">
        </a> 
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
                <li><a href="#somewhere1">Apparel</a></li>
                <li><a href="#somewhere2">Home Decor</a></li>
                <li><a href="#somewhere1">Collections</a></li>
            </ul>

            
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#">About Us</a></li>
                <% if(session.cart){ %>
                <li><a href="#" id="cart">Cart <span class="badge"><%= session.cart.totalQuantity%></span></a></li>
                <% } else { %>
                  <li><a href="#" id="cart">Cart <span class="badge">0</span></a></li>
                <% } %>
              </ul>
        </div>
    </div>
  </nav>    

  <div class="container-cart">
    <div class="shopping-cart" style="display: none;">
      <div class="shopping-cart-header">
        <i class="fa fa-shopping-cart cart-icon"></i><span class="badge">3</span>
        <div class="shopping-cart-total">
          <span class="lighter-text">Total:</span>
          <span class="main-color-text">$2,229.97</span>
        </div>
      </div> 
  
      <ul class="shopping-cart-items">
        <li class="clearfix">
          <img src="/imgs/shirt1.png" alt="item1" />
          <span class="item-name">Tshirt 1</span>
          <span class="item-price">$84.99</span>
          <span class="item-quantity">Quantity: 01</span>
        </li>
       
      </ul>
  
      <a href="#" class="button">Checkout</a>
    </div>
  </div>

  <div class="containerr">
    <div class="grid second-nav">
      <div class="column-xs-12">
       
      </div>
    </div>
    <div class="grid product">
      <div class="column-xs-12 column-md-7">
        <div id="gallery" class="container-fluid preview">  
 <div class="img1 img-responsive zoomArea zoom" id='ex1'>
  <img id="NZoomImg" data-NZoomscale="2" src="data:image/<%=img.contentType%>;base64,<%=img.data.toString('base64')%>" class="img-responsive magnifiedImg"  >

 </div>
        
        </div>
      </div>
      <div class="column-xs-12 column-md-7 column-lg-5">
        <div class="description">
         <%=description%>
      </div>
      <div class="product-color">
        <span>Color</span>
 <br>

<div class="colors">
  <%for(var i = 0; i<attr.length; i++){%>
  <input type="radio" name="radio" id="radio-<%=attr[i].color %>">
  <label class="colour-box-<%=attr[i].color %>" for="radio-<%=attr[i].color %>"></label>
  <%}%>  
</div>  
      </div>
        <h1><%=title%>
        </h1>
        <h2>Rs.<%=price%></h2>
         <br>
         <label for="sizes" style="border: none;">Size</label>
        
         <div class="select-size">
          <%for(var i = 0; i<attr.length; i++){%>
            <%for(var j = 0; j<attr[i].sizes.length; j++){%>
          <input type="radio" name="s-size" id="<%= attr[i].sizes[j] %>" checked/>
          <label for="<%= attr[i].sizes[j] %>"><%= attr[i].sizes[j] %></label>
          <%}%>
          <%}%>
  
        </div>
         <br> <br>
        
        <div class="uwu">
          <a href="/productdetail/add-to-cart/<%=_id%>"><button class="add-to-cart">Add To Cart</button></a>
           <div class="stock" id="st">In Stock</div>
        </div>

        <br> <br>
        
          
        
      </div>
    </div>

    <div id="myModal" class="modal fade" role="dialog">
      <div class="modal-dialog">
    
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-body">
          </div>
        </div>
    
      </div>
    </div>
  </div>

<div class="footer justify-content-center">
 <div>@theterracegig</div>
 <div>TerraceGig@Gmail.com</div>
 <div>@theterracegig</div>
</div>
 
<script
  src="https://code.jquery.com/jquery-3.6.0.js"
